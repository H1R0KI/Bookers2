<p>
  <%= flash[:notice] %>
</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <label for="book-title">Title</label>
        <p><%= f.text_field :title, class: "form-control" %></p>
      </div>
      <div class="form-group">
        <label for="book-opinion">Opinion</label>
        <p><%= f.text_area :body, class: "form-control" %></p>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', {class: "btn btn-success"} %>
      </div>
      <% end %>
    </div>
  
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tr>
        <td>
          <%= link_to user_path(@books.user_id) do %>
            <%= image_tag @books.user.get_profile_image(100, 100) %>
            <p><%= @books.user.name %></P>
          <% end %>
        </td>
        <td><%= link_to @books.title, book_path(@books.id) %></td>
        <td><%= @books.body %></td>
        <% if @books.user_id == current_user.id %>
        <td>
          <%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger",
          "data-confirm" => "本当に消しますか？" %>
        </td>
        <% end %>
      </tr>
    </table>
  </div>
</div>