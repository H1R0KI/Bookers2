
<h2>User info</h2>
  <%= form_with model: @user do |f| %>
  <div class="form-group">
    <label for="user_name">Name</label>
    <%= f.text_field :name, {class: "form-control name"} %>
  </div>
  <div class="form-group">
    <label for="user_image">Image</label>
    <p><%= f.file_field :profile_image, accept: "image/*" %></p>
  </div>
  <div class="form-group">
    <label for="user_introduction">Introducution</label>
    <%= f.text_area :introduction, {class: "form-control introduciton"} %>
  </div>
  <div class="form-group">
    <%= f.submit "Update User" %>
  </div>
  <% end %>